\tikzset{pics/flagcross/.style n args={4}{
	code={
	\begin{scope}
	\clip (-\cardwidth/2 - \bleed, 0in) --%
	      (-\cardwidth/2 - \bleed, \cardheight/2 + \bleed) --%
	      (\cardwidth/2 + \bleed, \cardheight/2 + \bleed) --%
	      (\cardwidth/2 + \bleed, -\cardheight/2 - \bleed) --%
	      (-\cardwidth/2 - \bleed, -\cardheight/2 - \bleed) --%
	      cycle;

	\node[inner sep=0pt, minimum height=\cardheight + 2\bleed, minimum width=\cardwidth +2\bleed, fill=#1] at (0,0) {};

	\draw[line width=0.375in, #3] (-\cardwidth/2 - \bleed, 0) -- (\cardwidth/2 + \bleed, 0);	
	\draw[line width=0.375in, #3] (0, -\cardheight/2 - \bleed) -- (0,\cardheight/2 + \bleed);	
	
	\draw[line width=0.25in, #2] (-\cardwidth/2 - \bleed, 0) -- (\cardwidth/2 + \bleed, 0);	
	\draw[line width=0.25in, #2] (0, -\cardheight/2 - \bleed) -- (0,\cardheight/2 + \bleed);
	
	\end{scope}

	\pic () at (0,0) {cutguide={#4}};
}}}

